<!DOCTYPE html>
<html>
  <head>
    <title>MyFancyRestaurant</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <link href='https://fonts.googleapis.com/css?family=Sevillana' rel='stylesheet' type='text/css'>
  </head>
  <body>
    <%= render 'layouts/navbar' %>
    <%= render 'layouts/messages' %>
    <div class="container">
      <%= search_form_for(@q, id: "search") do |f| %>
        <div class="field">
          <%= f.label :name_cont, "Search Food by Name" %>
          <%= f.text_field :name_cont %>
        </div>
    <% end %>
      <ul class="nav nav-tabs">
        <% %w(breakfast lunch dinner drink american vietnamese chinese korean).each do |item|  %>
          <li class="nav-item">
            <%= link_to item.capitalize, "/menu/#{item}", class: "nav-link #{'active' if current_page?('/menu/' + item)}" %>
          </li>
        <% end %>
      </ul>
      <%= yield %>
    </div>
  </body>
  <div class="container">
    <footer class="footer">
      &copy; Tien Manh Do 2016
    </footer>
  </div>
</html>
