<%= render 'shared/errors', obj: @rating %>
<% if current_page?(controller: 'ratings', action: 'new') %>
  <style>
    body {
      background: url(/assets/emo3.jpg) no-repeat center center fixed;
      background-attachment: fixed;
     -webkit-background-size: cover;
       -moz-background-size: cover;
       -o-background-size: cover;
       background-size: cover;
      background-repeat: no-repeat;
    }
  </style>
<% end %>
<h2 class="text-sm-center" style="margin-top: 20px; color: deepskyblue;">Enjoy it?</h2>
<div id="rating-form">
<%= form_for([@food, @rating]) do |f| %>
  <div class="form-group row">
    <div class="form-control-label col-sm-3 label-color">
      How does it taste?
    </div>
    <div class="col-sm-9">
      <div id="star-rating"></div>
    </div>
  </div>

  <div class="form-group row">
    <div class="form-control-label col-sm-3">
      <%= f.label :name, class: "label-color" %>
    </div>
    <div class="col-sm-9">
      <%= f.text_field :name, class: "form-control", id: "transparent-rating" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="form-control-label col-sm-3">
      <%= f.label :comment, class: "label-color" %>
    </div>
    <div class="col-sm-9">
      <%= f.text_area :comment, class: "form-control", rows: 10, id: "transparent-rating" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-offset-3 col-sm-9">
      <%= f.submit class: "btn btn-info"%>
    </div>
  </div>
<% end %>
</div>
<script>
  $('#star-rating').raty({
      path: '/assets/',
      scoreName: 'rating[stars]'
  });
</script>
