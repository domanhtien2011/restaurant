<%= form_for([@food, @rating]) do |f| %>
  <% if @rating.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rating.errors.count, "error") %> prohibited this rating from being saved:</h2>
      <ul>
      <% @rating.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <br>

  <div class="form-group row">
    <div class="form-control-label col-sm-3">
      How does it taste?
    </div>
    <div class="col-sm-9">
      <div id="star-rating"></div>
    </div>
  </div>

  <div class="form-group row">
    <div class="form-control-label col-sm-3">
      <%= f.label :name %>
    </div>
    <div class="col-sm-9">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="form-control-label col-sm-3">
      <%= f.label :comment %>
    </div>
    <div class="col-sm-9">
      <%= f.text_area :comment, class: "form-control", rows: 10 %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-offset-3 col-sm-9">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<script>
  $('#star-rating').raty({
      path: '/assets/',
      scoreName: 'rating[stars]'
  });
</script>
