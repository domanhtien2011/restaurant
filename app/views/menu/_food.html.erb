<table class="table table-inverse" id="table-active" >
  <thead>
    <tr>
      <th><%= sort_link(@q, :name) %></th>
      <th class="headerColor">Picture</th>
      <th class="headerColor">Description</th>
      <th><%= sort_link(@q, :price) %></th>
      <th>
        <%= sort_link(@q, :views) %>
      </th>
      <th class="headerColor">Order</th>
    </tr>
  </thead>
  <% @foods.each do |food| %>
    <tbody>
      <tr>
        <td><%= link_to food.name, food, id: "foodName" %></td>
        <td>
          <%= image_tag food.imageURL, size: "100x100", class: "img-fluid img-thumbnail" %>
        </td>
        <td><%= truncate(food.description, length: 100) %></td>
        <td><%= number_to_currency(food.price, unit: 'VND', format: "%n %u") %></td>
        <td> <%= food.views %></td>
        <td><%= link_to "Order", new_order_path(food), class: "btn btn-primary" %></td>

      </tr>
    </tbody>
  <% end %>
</table>



