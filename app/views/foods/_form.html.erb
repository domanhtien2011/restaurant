<%= render 'shared/errors', obj: @food %>

<%= form_for(@food) do |f| %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <br>
  <div class="field">
    <%= f.label :cuisine %>
    <%= f.select(:cuisine, [['American'], ['Vietnamese'], ['Chinese'], ['Korean']]) %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
    <div class="field">
    <%= f.label :imageURL %><br>
    <%= f.text_field :imageURL %>
  </div>
  <br>
  <div class="field">
    <%= f.label :section_id %><br>
    <%= f.select(:section_id, [['Breakfast', 1], ['Lunch', 2], ['Dinner', 3], ['Drinks', 4]]) %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
