<div class="row">
  <div class="col-sm-12">
    <%= form_for @order, url: orders_create_path(@order) do |f| %>

    <%= hidden_field_tag(:food_id, @food.id) %>

    <div class="form-group row">
      <div class="form-control-label col-sm-3">
        <%= f.label :name %>
      </div>
      <div class="form-control-label col-sm-9">
        <%= f.text_field :username, class: "transparent-label form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="form-control-label col-sm-3">
        <%= f.label :coupon %>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :coupon, class: "transparent-label form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="form-control-label col-sm-3">
        <%= f.label :phone %>
      </div>
      <div class="form-control-label col-sm-9">
        <%= f.telephone_field :phone, class: "transparent-label form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="form-control-label col-sm-3">
        <%= f.label :address %>
      </div>
      <div class="form-control-label col-sm-9">
        <%= f.text_field :address, class: "transparent-label form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="form-control-label col-sm-3">
        <%= f.label :email %>
      </div>
      <div class="form-control-label col-sm-9">
        <%= f.text_field :email, class: "transparent-label form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-offset-3 col-sm-9">
        <%= f.submit class: "btn btn-warning" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
